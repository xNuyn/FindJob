{
    "name": "express-boilerplate",
    "version": "1.0.0",
    "description": "express,typescripts boilerplate",
    "main": "src/index.ts",
    "scripts": {
        "dev": "nodemon ./src/index.ts",
        "start": "ts-node ./src/index.ts",
        "start:nodemon": "./node_modules/nodemon/bin/nodemon.js",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "start:prod": "npm run build && node ./dist/src/server.js",
        "build": "npx tsc",
        "prepare": "husky",
        "lint-staged": "lint-staged",
        "test": "echo \"No tests specified\""
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "husky": {},
    "repository": "https://github.com/linhprovip2002/express-boilerplate",
    "author": "linhprovip2002",
    "license": "MIT",
    "private": true,
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "mongoose": "^8.7.0",
        "mongoose-delete": "^1.0.2",
        "mongoose-paginate-v2": "^1.8.5",
        "neo4j-driver": "^5.26.0",
        "openai": "^4.70.2",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.14.2"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/eslint-parser": "^7.25.1",
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@types/express": "^5.0.0",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^22.7.4",
        "@typescript-eslint/eslint-plugin": "^8.8.0",
        "@typescript-eslint/parser": "^8.8.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.30.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.6",
        "install": "^0.13.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "3.3.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2"
    }
}
